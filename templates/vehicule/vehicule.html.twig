<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Page d'accueil - choubikloubik</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #E9ECEF;
        }
        header, nav {
            background-color: #1762AC;
            color: #fff;
            padding: 10px; /* Augmentation du remplissage pour améliorer l'apparence */
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        nav a {
            color: #D8E7FF;
            margin-left: 10px; /* Ajout d'une marge entre les liens */
            text-decoration: none; /* Suppression du soulignement des liens */
        }
        nav a:hover {
            text-decoration: underline; /* Soulignement des liens au survol */
        }
        .container {
            max-width: 800px; /* Limite la largeur du contenu pour une meilleure lisibilité */
            margin: 20px auto; /* Centrer le contenu horizontalement */
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Ajout d'une ombre pour démarquer le contenu */
        }
        table {
            width: 100%;
            border-collapse: collapse; /* Fusionner les bordures de cellules */
        }
        th, td {
            padding: 8px;
            border-bottom: 1px solid #ddd; /* Ajout d'une bordure basse pour séparer les lignes */
            text-align: left; /* Alignement du texte à gauche dans les cellules */
        }
        th {
            background-color: #1762AC;
            color: #fff;
        }
        button {
            background-color:  #F630C9;
            color: #fff;
            border: none;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            border-radius: 4px;
        }
        button:hover {
            background-color: #D5008F; /* Changement de couleur au survol */
        }
    </style>
</head>
<body>
    <header>
        <h1>choubikloubik</h1>
        <nav>
            <a href="{{ path('app_livreur') }}">Accueil</a>
          
            <a href="#">Logout</a>
        </nav>
    </header>
    {% block body %}
    <div class="container">
        <h2>Liste des véhicules</h2>
       
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Type</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for vehicule in vehicules %}
                    <tr>
                        <td>{{ vehicule.id }}</td>
                        <td>{{ vehicule.type }}</td>
                        <td>
                            <button class="modifier" data-id="{{ vehicule.id }}">Modifier</button>
                            <button class="supprimer" data-id="{{ vehicule.id }}" data-url="{{ path('supprimer_vehicule', {'id': vehicule.id}) }}" class="btn btn-danger">Supprimer</button>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {% endblock %}
</body>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const buttonsModifier = document.querySelectorAll('.modifier');
        buttonsModifier.forEach(button => {
            button.addEventListener('click', function () {
                const id = this.getAttribute('data-id');
                const newType = prompt('Entrez le nouveau type de véhicule :');
                if (newType !== null) {
                    modifierVehicule(id, newType);
                }
            });
        });

        function modifierVehicule(id, newType) {
            fetch("{{ path('modifier_vehicule', {'id': '__id__'}) }}".replace('__id__', id), {
                method: 'POST',
                headers: {
                    'X-Requested-With': 'XMLHttpRequest',
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ new_type: newType })
            })
            .then(response => {
                if (response.ok) {
                    alert('Véhicule modifié avec succès.');
                    window.location.reload();
                } else {
                    alert('Erreur lors de la modification du véhicule.');
                }
            })
            .catch(error => {
                console.error('Erreur lors de la modification du véhicule:', error);
                alert('Une erreur s\'est produite lors de la modification du véhicule.');
            });
        }
    });
</script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const buttonsSupprimer = document.querySelectorAll('.supprimer');
        buttonsSupprimer.forEach(button => {
            button.addEventListener('click', function () {
                const id = this.getAttribute('data-id');
                const url = this.getAttribute('data-url');
                if (confirm("Voulez-vous vraiment supprimer ce véhicule ?")) {
                    supprimerVehicule(url);
                }
            });
        });

        function supprimerVehicule(url) {
            fetch(url, {
                method: 'DELETE',
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => {
                if (response.ok) {
                    alert('Véhicule supprimé avec succès.');
                    // Actualiser la page après la suppression
                    window.location.reload();
                } else {
                    alert('Erreur lors de la suppression du véhicule.');
                }
            })
            .catch(error => {
                console.error('Erreur lors de la suppression du véhicule:', error);
                alert('Une erreur s\'est produite lors de la suppression du véhicule.');
            });
        }
    });
</script>


    <div class="container">
        <h2>Ajouter un véhicule</h2>
        <form action="{{ path('app_ajouter_vehicule') }}" method="post">
            <div class="form-group">
                <label for="type">Type :</label>
                <input type="text" id="type" name="type" required>
                 <button type="submit">Ajouter</button>
            </div>
           
        </form>
    </div>
</body>
</html>
